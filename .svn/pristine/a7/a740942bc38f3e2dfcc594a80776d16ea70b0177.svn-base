/*==============Contact==============*/
button, html input[type="button"], input[type="reset"], input[type="submit"]{
	-webkit-appearance: button;
	cursor: pointer;
	z-index: 10000;
}
.btn-lg{
	padding: 10px 16px;
	font-size: 16px;
	line-height: 1.33;
	width: 100%;
}
.btn-primary{
	color: #ffffff;
    background-color: #d61041;
    border-color: gray;
}
.btn-primary:hover{
	color: #ffffff;
    background-color: #b3b3b3;
    border-color: gray;
}
.btn-md{
	padding: 10px 16px;
	font-size: 18px;
	line-height: 1.33;
	width: 70%;
}

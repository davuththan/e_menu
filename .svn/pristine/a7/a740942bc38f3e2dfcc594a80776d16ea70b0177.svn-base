/*===============Foooter=================*/

.delay{
	visibility: visible; 
	animation-delay: 0.4s; 
	animation-name: fadeInUp;
	animation-name: fadeInDown;
	animation-name: fadeInLeft;
	animation-name: fadeInRight;
}
.delay-sm{
	visibility: visible; 
	animation-delay: 0.4s; 
	animation-name: fadeInLeft;
}
.delay-lg{
	visibility: visible; 
	animation-delay: 0.4s; 
	animation-name: fadeInRight;
}

/*================media screen layout====================*/
@media (min-width: 360px) and (max-width: 640px){
	.container{
		margin: 0 !important;
		padding: 0 !important;
		left: 0 !important;
		right: 0 !important;
	}
	.title_our_service{
		font-size:25px;
		color:#d11a48;
	}
	.title_our_Progress{
		font-size: 25px;
	}
}
@media (min-width: 320px) and (max-width: 480px){

/*	DETAIL
/*------------------------------------------*/
.wrap-col select{
	width: 25%;
	padding: 9px;
	outline: none;
	box-shadow: none;
	margin-top: 5px;
}

.detail .carousel-indicators li {
	display: inline-block;
	margin: 1px;
	width: 45px;
	height: 5px;
	border: none;
	border-radius: 0px;
	background: #939393;
	text-indent: -999px;
	cursor: pointer;
}
.detail .carousel-indicators{
	color:gray;
}
.detail .carousel-indicators .active{
	background:#d61041;
}
